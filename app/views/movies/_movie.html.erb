<div class="col s12 m6">
<div class="card medium">
  <div class="card-image waves-effect waves-block waves-light">
    <img class="activator" src=<%= movie.image_url %>>
  </div>
  <div class="card-content">
    <span class="card-title activator grey-text text-darken-4"><%= link_to movie.title, movie_path(movie) %><i class="material-icons right">more_vert</i></span>
  </div>
  <p><%= formatted_date(movie.release_date) %></p>
  <p>Dir. <%= movie.director %> | <%= movie.runtime_in_minutes %> minutes</p>
  <div class="card-reveal">
    <span class="card-title grey-text text-darken-4">User Rating: <i class="material-icons right">close</i></span>
    <h4><%= movie.review_average %>/10</h4>
    <p><%= movie.description %></p>
  </div>
</div>
</div>