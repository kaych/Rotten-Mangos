<%= form_tag(movies_path, method: "get") do %>
  <%= text_field_tag :query, nil, placeholder: "Title or Director" %>
  <%= select_tag :runtime_in_minutes, options_for_select([['Under 90 minutes', 1], ['Between 90-120 minutes', 2], ['Over 120 minutes', 3]]), {include_blank: true} %>
  <%= submit_tag("SEARCH") %>
<% end %>