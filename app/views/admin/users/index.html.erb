<h1>Global Users List <i class="material-icons md-48">public</i> (<a href="<%= new_admin_user_path %>"><i class="medium mdi-social-group-add"></i></a>)</h1>
<hr/>
<% if @users %>
  <table>
    <tr>
      <th>ID</th>
      <th><i class="material-icons">person</i></th>
      <th>Admin Status</th>
    </tr>
    <% @users.each do |u| %>
      <tr>
        <td><%= u.id %></td>
        <td><%= link_to u.full_name, admin_user_path(u) %></td>
      <% if u.admin? %>
        <td class="yes-admin"><i class="material-icons">check box</i></td>
        </tr>
      <% else %>
        <td class="not-admin"><i class="material-icons">close</i></td>
        </tr>
      <% end %>
    <% end %>
    <%= paginate @users %>
  </table>
<% else %>
  <p>There are no users yet!</p>
<% end %>
